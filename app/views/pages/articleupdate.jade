extends ../layout

block content
  .container
    .row.col-xs-12
      form.form-horizontal(method="post", action="/article/update" enctype="multipart/form-data")
        .form-group
          .col-xs-6
            input.form-control(type="text" name="title" value="#{article.title}")
          .col-xs-3
            input.form-control.hide(type="text" name="_id" value="#{article._id}")
          .col-xs-3
            input.form-control.hide(type="text" name="attachmentId" value=Date.now())
          .col-xs-10
            textarea.form-control(name="content" rows="10" cols="20") #{article.content}
          .col-xs-3
            input.form-control(type="file" name="file")
          .col-xs-2
            button.btn.btn-primary(type="submit") 修改
